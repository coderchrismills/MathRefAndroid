<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/equation_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/tools_text_color"
                android:layout_marginTop="22dp"
                android:text="Line 1:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText01"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="A"
                android:textColor="@color/tools_text_color"/>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="24dp"
                android:textColor="@color/tools_text_color"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:text="x +"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/editText02"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="B"
                android:textColor="@color/tools_text_color"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:textColor="@color/tools_text_color"
                android:text="y ="
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/editText03"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp" 
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="C"
                android:textColor="@color/tools_text_color"/>
        </LinearLayout>

    	<LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/tools_text_color"
                android:layout_marginTop="22dp"
                android:text="Line 2:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText04"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"            
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="D"
                android:textColor="@color/tools_text_color"/>
            
            <TextView
                android:id="@+id/textView5"
                android:layout_width="24dp"
                android:textColor="@color/tools_text_color"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:text="x +"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/editText05"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="E"
                android:textColor="@color/tools_text_color"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:textColor="@color/tools_text_color"
                android:text="y ="
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/editText06"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp" 
                android:layout_weight="1"
                android:gravity= "center"
                android:background="@drawable/thinborder"
                android:inputType="number|numberSigned|numberDecimal" android:hint="F"
                android:textColor="@color/tools_text_color"/>
        </LinearLayout>

    	<Button
    	    android:id="@+id/button1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_below="@+id/linearLayout2"
    	    android:layout_marginTop="17dp"
    	    android:text="Calculate"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>

    	<TextView
    	    android:id="@+id/results_textview"
    	    android:layout_width="fill_parent"
    	    android:layout_height="250dp"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/button1"
    	    android:layout_marginLeft="26dp"
    	    android:layout_marginRight="26dp"
    	    android:layout_marginTop="15dp"
            android:textColor="@color/tools_text_color"
    	    android:text=""/>
            
    </RelativeLayout>
</ScrollView>